# 生产环境配置
# 复制此文件为 .env 并修改配置

# Flask 密钥（务必修改为随机字符串）
SECRET_KEY=your-super-secret-key-change-this-in-production

# API Keys（逗号分隔，务必修改）
API_KEYS=prod-key-xxx-001,prod-key-xxx-002

# 数据库路径
DATABASE_URL=sqlite:////opt/yolo-api/data/detection.db

# 模型路径
MODEL_PATH=/opt/yolo-api/best.pt

# 检测参数
CONFIDENCE_THRESHOLD=0.25
IOU_THRESHOLD=0.45
MAX_IMAGE_SIZE=10485760

# 日志级别
LOG_LEVEL=INFO
